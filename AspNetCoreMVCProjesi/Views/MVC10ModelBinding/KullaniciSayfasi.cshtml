@model Kullanici
@{
    ViewData["Title"] = "Kullanıcı Bilgileri";
    // Sayfada model kullanmak istersek en üste model ile başlayan class adını yazmamız gerekir
}

<h1>Kullanıcı Bilgileri</h1>

<table class="table table-striped table-hover">
    <tr>
        <td>Ad</td>
        <td>@Model.Ad</td>
    </tr>
    <tr>
        <td>Soyad</td>
        <td>@Model.Soyad</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <td>Kullanıcı Adı</td>
        <td>@Model.KullaniciAdi</td>
    </tr>
    <tr>
        <td>Şifre</td>
        <td>@Model.Sifre</td>
    </tr>
</table>

